<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/folder_image"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:id="@+id/code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="Code : Abhishek"
                android:textColor="@color/colorLight"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/scannedBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/code"
                android:layout_alignStart="@+id/code"
                android:layout_below="@+id/code"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Scanned by - Abhishek Rajpoot"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorLight"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/scanTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/scannedBy"
                android:layout_alignStart="@+id/scannedBy"
                android:layout_below="@+id/scannedBy"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Scan Time: "
                android:textColor="@color/colorLight"
                android:textSize="18sp" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>